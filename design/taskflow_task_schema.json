{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Taskflow Task",
    "description": "JSON Schema for a Task in Taskflow (version 2)",
    "type": "object",
    "required": [
        "id",
        "title",
        "date_captured",
        "status",
        "tags",
        "version"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique task UID; generated by Date.now().toString()"
        },
        "title": {
            "type": "string",
            "description": "Task title or outcome"
        },
        "description": {
            "type": "string",
            "description": "Detailed description of the task"
        },
        "notes": {
            "type": "string",
            "description": "Optional free-form notes"
        },
        "date_due": {
            "type": [
                "string",
                "null"
            ],
            "format": "date-time",
            "description": "ISO date string for due date or null"
        },
        "date_captured": {
            "type": "string",
            "format": "date-time",
            "description": "ISO timestamp when the task was created"
        },
        "date_closed": {
            "type": [
                "string",
                "null"
            ],
            "format": "date-time",
            "description": "ISO timestamp when the task was closed or null"
        },
        "status": {
            "type": "string",
            "description": "Status label",
            "enum": [
                "Pending",
                "In Progress",
                "Completed",
                "Cancelled"
            ]
        },
        "status_attrib": {
            "type": "string",
            "description": "Optional metadata about status (e.g., 'Created')"
        },
        "tags": {
            "type": "array",
            "description": "Array of tag slugs (lowercase, no leading #)",
            "items": {
                "type": "string",
                "pattern": "^[a-z0-9_-]+$"
            },
            "minItems": 1
        },
        "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "description": "Priority scale (1=Urgent, 3=Normal, 4=Low). Default 3"
        },
        "section": {
            "type": "string",
            "description": "Container id like 'div1'..'div4'"
        },
        "time_estimate_minutes": {
            "type": "integer",
            "minimum": 0
        },
        "time_logged_minutes": {
            "type": "integer",
            "minimum": 0
        },
        "deleted": {
            "type": "boolean",
            "description": "Soft-delete flag"
        },
        "version": {
            "type": "integer",
            "description": "Schema version (2)",
            "const": 2
        },
        "subtasks": {
            "type": "array",
            "description": "Optional list of subtasks",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "title",
                    "completed"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "completed": {
                        "type": "boolean"
                    }
                }
            }
        }
    },
    "examples": [
        {
            "id": "1610000000000",
            "title": "Write proposal",
            "description": "Draft initial proposal and share for review",
            "notes": "Discuss scope with team",
            "date_due": "2026-01-15T00:00:00.000Z",
            "date_captured": "2026-01-11T12:00:00.000Z",
            "date_closed": null,
            "status": "Pending",
            "status_attrib": "Created",
            "tags": [
                "work",
                "proposal"
            ],
            "priority": 1,
            "section": "div1",
            "time_estimate_minutes": 120,
            "time_logged_minutes": 0,
            "deleted": false,
            "version": 2,
            "subtasks": []
        }
    ]
}